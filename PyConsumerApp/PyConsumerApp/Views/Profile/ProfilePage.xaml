                <!--Edit Profile Button-->
                <border:SfBorder Grid.Row="3" BorderWidth="1" BorderColor="{DynamicResource PrimaryColor}" HorizontalOptions="FillAndExpand" Margin="10,5,10,5" CornerRadius="4" >
                    <Grid
                            HorizontalOptions="FillAndExpand"
                            BackgroundColor="White"
                            ColumnSpacing="0"
                            Grid.Row="0">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer 
                            Command="{Binding EditProfileCommand }" CommandParameter="{Binding .}" />
                        </Grid.GestureRecognizers>
                        <buttons:SfButton
                            IsEnabled="False"
                            x:Name="editButton"
                            CornerRadius="4"
                            TextColor="{DynamicResource PrimaryColor}"
                            Style="{StaticResource IconButtonStyle}"
                            FontAttributes="Bold"
                            Text="{StaticResource Edit}" />
                        <buttons:SfButton
                            IsEnabled="False"
                                Grid.Column="1"
                                        Padding="0"
                                        TextColor="{DynamicResource PrimaryColor}"
                                        BackgroundColor="White"
                                        FontAttributes="Bold"
                                        FontFamily="{StaticResource Montserrat-SemiBold}"
                                        Text="Edit Profile"
                                        Command="{TemplateBinding BindingContext.EditProfileCommand }"
                                        CommandParameter="{x:Reference editButton}"/>

                        <buttons:SfButton
                            IsEnabled="False"
                                Grid.Column="2"
                            Command="{TemplateBinding BindingContext.EditProfileCommand }"
                            CommandParameter="{x:Reference editButton}"
                            CornerRadius="4"
                                HorizontalOptions="End"
                            TextColor="{DynamicResource PrimaryColor}"
                            Style="{StaticResource IconButtonStyle}"
                            Text="{StaticResource Next}" />
                    </Grid>
                </border:SfBorder>


                <!--My Orders Button-->
                <border:SfBorder Grid.Row="3" BorderWidth="1" BorderColor="{DynamicResource PrimaryColor}" HorizontalOptions="FillAndExpand" Margin="10,5,10,5" CornerRadius="4" >
                    <Grid
                            HorizontalOptions="FillAndExpand"
                            BackgroundColor="White"
                            ColumnSpacing="0"
                            Grid.Row="0">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer 
                            Command="{Binding MyOrdersCommand }" CommandParameter="{Binding .}" />
                        </Grid.GestureRecognizers>
                        <buttons:SfButton
                            IsEnabled="False"
                            CornerRadius="4"
                            TextColor="{DynamicResource PrimaryColor}"
                            Style="{StaticResource IconButtonStyle}"
                            FontAttributes="Bold"
                            Text="{StaticResource MyOrdersIcon}" />
                        <buttons:SfButton
                            IsEnabled="False"
                                Grid.Column="1"
                                        Padding="0"
                                        TextColor="{DynamicResource PrimaryColor}"
                                        BackgroundColor="White"
                                        FontAttributes="Bold"
                                        FontFamily="{StaticResource Montserrat-SemiBold}"
                                        Text="My Orders"/>

                        <buttons:SfButton
                            IsEnabled="False"
                                Grid.Column="2"
                            CornerRadius="4"
                                HorizontalOptions="End"
                            TextColor="{DynamicResource PrimaryColor}"
                            Style="{StaticResource IconButtonStyle}"
                            Text="{StaticResource Next}" />
                    </Grid>
                </border:SfBorder>
                <border:SfBorder Grid.Row="3" BorderWidth="0" HorizontalOptions="Center" Margin="0,24,0,32" WidthRequest="220" CornerRadius="20" >
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <gradient:SfGradientView Grid.Row="0"  >
                            <gradient:SfGradientView.BackgroundBrush>
                                <gradient:SfLinearGradientBrush>
                                    <gradient:SfLinearGradientBrush.GradientStops>
                                        <gradient:SfGradientStop Color="{DynamicResource PrimaryColor}" Offset="0.0" />
                                        <gradient:SfGradientStop Color="{DynamicResource PrimaryGradient}" Offset="1.0" />
                                    </gradient:SfLinearGradientBrush.GradientStops>
                                </gradient:SfLinearGradientBrush>
                            </gradient:SfGradientView.BackgroundBrush>
                        </gradient:SfGradientView>
                        <!--  LogOut button  -->
                        <buttons:SfButton
                                        CornerRadius="20"
                                        Grid.Row="0"
                                        Padding="0"
                                        TextColor="{DynamicResource PrimaryColor}"
                                        BorderWidth="3"
                                        BorderColor="Transparent"
                                        BackgroundColor="White"
                                        FontAttributes="Bold"
                                        FontFamily="{StaticResource Montserrat-SemiBold}"
                                        Text="LOG OUT"
                                        Command="{Binding LogOutCommand}"/>
                    </Grid>
                </border:SfBorder>

            </StackLayout>

        </ScrollView>
    </ContentPage.Content>
</ContentPage>