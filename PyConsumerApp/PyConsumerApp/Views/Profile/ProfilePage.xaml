                <!-- User Info StackLayout -->
                <StackLayout Spacing="0">
                    
                    <!-- User Name-->
                    <Grid Margin="20,10,20,5"
                    Grid.Row="2" RowSpacing="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Label
                        Grid.Row="0"
                        HorizontalOptions="Start"
                        FontAttributes="Bold"
                        FontSize="10"
                        FontFamily="{StaticResource Montserrat-SemiBold}"
                        TextColor="{DynamicResource HyperLink}"
                        Text="Name"/>
                        <Label
                        Grid.Row="1"
                        FontSize="16"
                        HorizontalOptions="Start"
                        FontAttributes="Bold"
                        FontFamily="{StaticResource Montserrat-SemiBold}">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{Binding Profile.FirstName}" />
                                    <Span Text=" "/>
                                    <Span Text="{Binding Profile.LastName} "/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <BoxView
                            Grid.Row="2"
                            Margin="0,5,0,0"
                            HeightRequest="1"
                            Style="{StaticResource BoxViewStyle}" />
                    </Grid>
                    
                    <!-- Secondary Number-->
                    <Grid Margin="20,10,20,5"
                    Grid.Row="2" RowSpacing="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Label
                        Grid.Row="0"
                        HorizontalOptions="Start"
                        FontAttributes="Bold"
                        FontSize="10"
                        FontFamily="{StaticResource Montserrat-SemiBold}"
                        TextColor="{DynamicResource HyperLink}"
                        Text="Secondary Number"/>
                        <Label
                        Grid.Row="1"
                        FontSize="16"
                        HorizontalOptions="Start"
                        FontAttributes="Bold"
                        FontFamily="{StaticResource Montserrat-SemiBold}"
                        Text="{Binding Profile.SecondaryPhone} "/>
                        <BoxView
                            Grid.Row="2"
                            Margin="0,5,0,0"
                            HeightRequest="1"
                            Style="{StaticResource BoxViewStyle}" />
                    </Grid>


                    <!-- E-Mail ID -->
                    <Grid Margin="20,10,20,5"
                    Grid.Row="2" RowSpacing="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Label
                        Grid.Row="0"
                        HorizontalOptions="Start"
                        FontAttributes="Bold"
                        FontSize="10"
                        FontFamily="{StaticResource Montserrat-SemiBold}"
                        TextColor="{DynamicResource HyperLink}"
                        Text="E-Mail ID"/>
                        <Label
                        Grid.Row="1"
                        FontSize="16"
                        HorizontalOptions="Start"
                        FontAttributes="Bold"
                        FontFamily="{StaticResource Montserrat-SemiBold}"
                        Text="{Binding Profile.Email} "/>
                        <BoxView
                            Grid.Row="2"
                            Margin="0,5,0,0"
                            HeightRequest="1"
                            Style="{StaticResource BoxViewStyle}" />
                    </Grid>

                    <!-- City And State Grid-->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- City Grid-->
                        <Grid Margin="20,10,20,5" 
                              Grid.Column="0"
                              RowSpacing="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Label
                        Grid.Row="0"
                        HorizontalOptions="Start"
                        FontAttributes="Bold"
                        FontSize="10"
                        FontFamily="{StaticResource Montserrat-SemiBold}"
                        TextColor="{DynamicResource HyperLink}"
                        Text="City"/>
                            <Label
                        Grid.Row="1"
                        FontSize="16"
                        HorizontalOptions="Start"
                        FontAttributes="Bold"
                        FontFamily="{StaticResource Montserrat-SemiBold}"
                        Text="{Binding Profile.City} "/>
                            <BoxView
                            Grid.Row="2"
                            Margin="0,5,0,0"
                            HeightRequest="1"
                            Style="{StaticResource BoxViewStyle}" />
                        </Grid>

                        <!-- State Grid-->
                        <Grid Margin="20,10,20,5"
                              Grid.Column="1"
                              RowSpacing="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Label
                        Grid.Row="0"
                        HorizontalOptions="Start"
                        FontAttributes="Bold"
                        FontSize="10"
                        FontFamily="{StaticResource Montserrat-SemiBold}"
                        TextColor="{DynamicResource HyperLink}"
                        Text="State"/>
                            <Label
                        Grid.Row="1"
                        FontSize="16"
                        HorizontalOptions="Start"
                        FontAttributes="Bold"
                        FontFamily="{StaticResource Montserrat-SemiBold}"
                        Text="{Binding Profile.State} "/>
                            <BoxView
                            Grid.Row="2"
                            Margin="0,5,0,0"
                            HeightRequest="1"
                            Style="{StaticResource BoxViewStyle}" />
                        </Grid>
                    </Grid>
                </StackLayout>
                
                <!-- Loyalty Points 
                <BoxView
                Grid.Row="1"
