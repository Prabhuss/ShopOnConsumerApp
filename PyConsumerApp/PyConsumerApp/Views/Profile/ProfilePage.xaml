                            Style="{StaticResource IconButtonStyle}"
                            Text="{StaticResource Edit}" />
                    </svg:TitleView.TrailingView>
                    
                    -->
                </svg:TitleView>
                <ContentPresenter />
            </StackLayout>
        </ControlTemplate>
    </ContentPage.ControlTemplate>

    <!--  Binding context for Profile Page  -->
    <ContentPage.BindingContext>
        <viewModel:ProfileViewModel />
    </ContentPage.BindingContext>

